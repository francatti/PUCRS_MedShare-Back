# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=senha_do_mysql
DB_NAME=medshare

# Configurações JWT
JWT_SECRET=sua_chave_secreta_jwt_muito_segura_aqui_pelo_menos_32_caracteres
JWT_EXPIRES_IN=24h

# Chave de Criptografia para dados sensíveis (deve ter 32 caracteres)
ENCRYPTION_KEY=chave_de_32_caracteres_para_aes256

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações de Email (Nodemailer)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USER=seu_usuario_mailtrap
EMAIL_PASS=sua_senha_mailtrap
EMAIL_FROM=noreply@medshare.com

# Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# URLs do Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL (Para produção)
SSL_KEY_PATH=
SSL_CERT_PATH= 